generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id        String    @id @default(cuid())
  name      String
  parentId  String?
  parent    Folder?   @relation("FolderToFolder", fields: [parentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  children  Folder[]  @relation("FolderToFolder")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
